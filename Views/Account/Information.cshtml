@model Account;
@{
    ViewData["Title"] = Model.SName; 
}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                @if(String.IsNullOrEmpty(Model.SAvatar)){
                    <img class="rounded-circle mt-5" width="150px" src="~/images/avatars/avatar_hoder.png">
                }else{
                    <img class="rounded-circle mt-5" width="150px" src="~/images/avatars/@Model.SAvatar">
                }
                
                <span class="font-weight-bold">@Model.SName</span>
                <span class="text-black-50">@Model.SEmail</span>
                <span> </span>
                </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Thông tin tài khoản</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6 mb-2">
                        <label class="labels">ID</label>
                        <input type="text" class="form-control" placeholder="" asp-for="IAccountId" readonly>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label class="labels">Tên tài khoản</label>
                        <input type="text" class="form-control"placeholder="" asp-for="SName">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 mb-2">
                        <label class="labels">Email</label>
                        <input type="text" class="form-control" placeholder="" asp-for="SEmail">
                    </div>
                    <div class="col-md-12 mb-2">
                        <label class="labels">Điện thoại</label>
                        <input type="text" class="form-control" placeholder="" asp-for="SPhone">
                    </div>
                    <div class="col-md-12 mb-2">
                        <label class="labels">Ngày sinh</label>
                        <input type="text" class="form-control" placeholder="" asp-for="DBirthofdate">
                    </div>
                </div>
                <div class="mt-5 text-center">
                    @* <button class="btn btn-primary profile-button" type="button">Lưu</button> *@
                </div>
            </div>
        </div>
        <div class="col-md-4">
            
        </div>
    </div>
</div>
</div>
</div>