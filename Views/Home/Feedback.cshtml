@model Feedback;
@{
    ViewData["Title"] = "Hỏi đáp";
}
<div class="container">
    <nav aria-label="breadcrumb" style="--bs-breadcrumb-divider: '>';">
        <ol class="breadcrumb ms-2">
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
<div class="container text-center" id="feedback-container">
    <img class="mt-3" src="~/images/logo_hiep_hoi_trai_tim.png" width="180px">
    <h2 class="text-success mt-4 mb-4">Gửi tắc mắc của bạn cho hiệp hội</h2>
    <form asp-action="Feedback" asp-controller="Home">
        <input type="text" asp-for="SContent" class="form-control"> 
        <span asp-validation-for="SContent" class="text-danger"></span> <br>
        <button type="submit" class="btn btn-success mt-3">Gửi</button>
    </form>
</div>